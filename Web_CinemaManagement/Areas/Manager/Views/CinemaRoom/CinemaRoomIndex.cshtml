@model IEnumerable<Web_CinemaManagement.Models.ModelLinq.PHONGCHIEU>

@{
    ViewBag.Title = "Quản Lý Phòng Chiếu";
}

<div class="container-fluid mt-4">

    <h2>@ViewBag.Title</h2>
    <hr />

    <p>
        @Html.ActionLink(" Thêm phòng mới", "Create", null, new { @class = "btn btn-success" })
    </p>

    <div class="card shadow-sm">
        <div class="card-header">
            <h5 class="mb-0">Danh sách phòng chiếu</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered">
                    <thead class="thead-light text-center">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.MAPHONG)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TENPHONG)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TONGSOGHE)
                            </th>
                            <th style="width: 250px;">Hành động</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.MAPHONG)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TENPHONG)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.TONGSOGHE)
                                </td>
                                <td class="text-center">
                                    @Html.ActionLink("Sửa", "Edit", new { id = item.MAPHONG }, new { @class = "btn btn-warning btn-sm mx-1" })
                                    @Html.ActionLink("Chi tiết", "Details", new { id = item.MAPHONG }, new { @class = "btn btn-info btn-sm mx-1" })
                                    @Html.ActionLink("Xóa", "Delete", new { id = item.MAPHONG }, new { @class = "btn btn-danger btn-sm mx-1" })

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>