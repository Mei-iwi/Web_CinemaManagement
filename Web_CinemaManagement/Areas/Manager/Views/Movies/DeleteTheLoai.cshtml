@model Web_CinemaManagement.Models.ModelLinq.THELOAIPHIM

@{
    ViewBag.Title = "Xóa Thể loại";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" style="padding-top: 20px;">
    <div class="panel panel-danger">
        <div class="panel-heading">
            <h3 class="panel-title">@ViewBag.Title</h3>
        </div>
        <div class="panel-body">
            <h3>Bạn có chắc chắn muốn xóa thể loại này?</h3>
            <p class="text-danger">Lưu ý: Nếu có phim đang sử dụng thể loại này, việc xóa có thể thất bại.</p>
            <div>
                <dl class="dl-horizontal">
                    <dt>Mã Thể Loại</dt>
                    <dd>@Html.DisplayFor(model => model.MATHELOAI)</dd>
                    <dt>Tên Thể Loại</dt>
                    <dd>@Html.DisplayFor(model => model.TENTHELOAI)</dd>
                </dl>
                <hr />

                @using (Html.BeginForm("DeleteTheLoai", "Movies", new { area = "Manager", id = Model.MATHELOAI }, FormMethod.Post, null))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-actions no-color">
                        <input type="submit" value="Xác nhận Xóa" class="btn btn-danger" />
                        @Html.ActionLink("Quay lại danh sách", "Index", "Movies", new { area = "Manager" }, new { @class = "btn btn-default" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>