@using Web_CinemaManagement.Models.ModelLinq;
@using PagedList.Mvc
@model PagedList.IPagedList<Web_CinemaManagement.Models.ModelLinq.PHIM>
@helper Truncate(string input, int length)
{

    if (input.Length < length)
    {
        @input
    }
    else
    {
        @input.Substring(0, length) <text>...</text>
    }

}

@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_LayoutPageCustomer.cshtml";
}

<link href="~/wwwroot/css/DashboardCustomer.css" rel="stylesheet" />
<h1 class="text-primary text-center">PHIM ĐANG CHIẾU</h1>



<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-4 col-lg-3 mt-3">
            <img style="width:100%; height:500px" src="~/wwwroot/PhotoOfTheFilm/@item.HINH_ANH" />
            <p class="text-center"><strong class="font-weight-bold">@item.TENPHIM</strong></p>
        </div>
    }

</div>

<div class="page-item d-flex justify-content-center">
    @Html.PagedListPager(Model, page => Url.Action("Dashboard", "Home", new { page, area = "" }),
 PagedListRenderOptions.ClassicPlusFirstAndLast)

</div>

