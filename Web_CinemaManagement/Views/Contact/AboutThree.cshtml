
@{
    ViewBag.Title = "AboutThree";
    Layout = "~/Views/Shared/_LayoutPageCustomer.cshtml";
}
@* link boostrap *@
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="~/wwwroot/Bootstrap/js/bootstrap.min.js"></script>
<!--Link css-->
<link href="~/wwwroot/css/About.css" rel="stylesheet" />
<!-- CSS thư viện Magnific Popup -->
<link rel="stylesheet" href="css/magnific-popup.min.css">
<body>
    <div class="about-page">

        <!-- Tiêu đề -->
        <h1 class="about-title">Về Chúng Tôi</h1>
        <!-- Menu chuyển trang -->
        <div class="page-links">
            <a href="@Url.Action("About","Contact")" >Giới thiệu</a>
            <a href="@Url.Action("AboutTwo","Contact")">Rạp</a>
            <a href="@Url.Action("AboutThree", "Contact")"class="active">Nhân Viên</a>
        </div>
        <!-- Đoạn văn giới thiệu -->
        <div class="about-page">

            <!-- Section 1: Giới thiệu -->
            <div class="about-section">
                <h2 class="about-title">Đội ngũ nhân viên</h2>
                <p class="about-text">
                    Nhân viên của chúng tôi thân thiện, chuyên nghiệp và luôn sẵn sàng hỗ trợ khách hàng.
                </p>
                <div class="about-gallery">
                    <div class="gallery-item">
                        <img src="~/wwwroot/images/nhanvien1.jpg" alt="Hình 1">
                        <div class="caption">Nhân viên làm nhiệt tình</div>
                    </div>
                    <div class="gallery-item">
                        <img src="~/wwwroot/images/nhanvien3.jpg" alt="Hình 2">
                        <div class="caption">Nhân viên làm việc nhanh chóng</div>
                    </div>
                </div>
                <hr class="section-divider">
            </div>

            <!-- Section 2: Hệ thống rạp -->
            <div class="about-section">
                <h2 class="about-title">Đồ ăn</h2>
                <p class="about-text">
                   Đồ ăn vặt gọn nhẹ,thơm ngon,phù hợp để xem phim
                </p>
                <div class="about-gallery">
                    <div class="gallery-item">
                        <img src="~/wwwroot/images/AnVat2.jpg" alt="Hình 3">
                        <div class="caption">Bắp rang bơ</div>
                    </div>
                    <div class="gallery-item">
                        <img src="~/wwwroot/images/AnVat1.jpg" alt="Hình 4">
                        <div class="caption">Nước uống</div>
                    </div>
                </div>
                <hr class="section-divider">
            </div>

            <!-- Section 3: Dịch vụ -->
            <div class="about-section">
                <h2 class="about-title">Dich Vu</h2>
                <p class="about-text">
                    Nhân viên của chúng tôi thân thiện, chuyên nghiệp và luôn sẵn sàng hỗ trợ khách hàng.
                </p>
                <div class="about-gallery">
                    <div class="gallery-item">
                        <img src="~/wwwroot/images/nhanvien1.jpg" alt="Hình 5">
                        <div class="caption">Nhân viên vui vẻ</div>
                    </div>
                    <div class="gallery-item">
                        <img src="~/wwwroot/images/dichvu1.jpg" alt="Hình 6">
                        <div class="caption">Ấn chuông để nhờ hỗ trợ</div>
                    </div>
                </div>


            </div>


        </div>

    <!-- JS trực tiếp trong HTML -->
    <script>
                    .page - links {
                text - align: center;
                margin: 30px 0;
            }

                    .page - links a {
                display: inline - block;
                padding: 10px 20px;
                margin: 0 5px;
                background - color: #f0f0f0;
                color: #333;
                text - decoration: none;
                border - radius: 5px;
                transition: all 0.3s ease; /* hiệu ứng mượt */
            }

                    /* Khi hover */
                    .page - links a:hover {
                background - color: #4CAF50; /* đổi màu nền */
                color: #fff;               /* đổi màu chữ */
                transform: scale(1.1);     /* phóng to nhẹ */
                box - shadow: 0 5px 15px rgba(0, 0, 0, 0.3); /* bóng nổi */
            }

                    /* Trang hiện tại */
                    .page - links a.active {
                background - color: #4CAF50;
                color: #fff;
                box - shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
            }
    </script>
