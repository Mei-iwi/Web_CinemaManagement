
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_LayoutPageCustomer.cshtml";
}
<link href="~/wwwroot/css/LayoutContact1.css" rel="stylesheet" />
@* link boostrap *@
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="~/wwwroot/Bootstrap/js/bootstrap.min.js"></script>
<body>
    <div class="container-fluid">
    <div class="row">
        <!-- Menu bên trái: 3 cột -->
        <nav class="col-lg-3 col-md-4 menu-left">
            <ul class="nav flex-column w-100">
                <li class="nav-item"><a class="nav-link active" href="#">Trang chủ</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Phim</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Lịch chiếu</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Khuyến mãi</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Liên hệ</a></li>
            </ul>
        </nav>

        <!-- Nội dung chính: 8 cột -->
        <main class="col-lg-8 col-md-8">
            <!-- Tiêu đề -->
            <h1 class="mb-4">Liên hệ với chúng tôi</h1>

            <!-- Form liên hệ full width -->
            <div class="row mb-4">
                <div class="col-12 contact-divider">
                    <form>
                        <div class="form-group">
                            <label for="name">Họ và tên</label>
                            <input type="text" class="form-control" id="name" placeholder="Nhập họ và tên" required>
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" id="email" placeholder="Nhập email" required>
                        </div>
                        <div class="form-group">
                            <label for="message">Nội dung</label>
                            <textarea class="form-control" id="message" rows="5" placeholder="Nhập nội dung liên hệ" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Gửi</button>
                    </form>
                </div>
            </div>

            <!-- Hai cột dưới form: contact-info | map -->
            <div class="row">
                <!-- Thông tin liên hệ -->
                <div class="col-md-6 mb-4 contact-info">
                    <h2>Trụ sở chính</h2>
                    <p>Tầng 2, Tòa A, 140 Lê Trọng Tấn, Phường Tây Thạnh, Quận Tân Phú, TP.HCM</p>

                    <h2>Dịch vụ khách hàng</h2>
                    <p>Hotline: 0123 456 789<br>Email: support@cgv.vn<br>Giờ làm việc: 8:00 - 22:00</p>

                    <h2>Liên hệ quảng cáo</h2>
                    <p>Phòng kinh doanh: +84-36-36 59 59<br>Ext: 278 (MS.HUYNH)<br>Email: ToilaMei@gmail.com</p>

                    <h2>Về Các rạp</h2>
                    <p>..................</p>
                </div>

                <!-- Map Google -->
                <div class="col-md-6 mb-4">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.0572728098978!2d106.62625947316987!3d10.806925558634246!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752be27ea41e05%3A0xfa77697a39f13ab0!2zMTQwIEzDqiBUcuG7jW5nIFThuqVuLCBUw6J5IFRo4bqhbmgsIFTDom4gUGjDuiwgVGjDoG5oIHBo4buRIEjhu5MgQ2jDrSBNaW5oIDcwMDAwMCwgVmnhu4d0IE5hbQ!5e0!3m2!1svi!2s!4v1763126796582!5m2!1svi!2s"
                        width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
        </main>

        <!-- Cột trống bên phải: 1 cột -->
        <div class="col-lg-1 d-none d-lg-block"></div>
    </div>
</div>       
</body>

